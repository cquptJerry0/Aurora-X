{
  "name": "aurora-x",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.9.0",
  "description": "A modern AI chat component library",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=18",
    "pnpm": ">=10.9.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:playground": "turbo run dev --filter=playground",
    "dev:docs": "turbo run dev --filter=docs",
    "build": "turbo run build",
    "build:components": "turbo run build --filter=vue-aurora-x",
    "build:docs": "turbo run build --filter=docs",
    "docs:deploy": "gh-pages -d apps/docs/.vitepress/dist",
    "docs:build-deploy": "pnpm run build:docs && pnpm run docs:deploy"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.9.0",
    "@changesets/cli": "^2.28.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^20.17.49",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.1",
    "eslint": "^9.23.0",
    "eslint-plugin-oxlint": "^0.16.2",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "oxlint": "^0.16.3",
    "prettier": "^3.2.0",
    "turbo": "^2.4.4",
    "typescript": "^5.3.0",
    "vite": "5.4.19"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
