{
  "name": "aurora-x",
  "version": "0.1.0",
  "description": "A modern AI chat component library",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "type": "module",
  "packageManager": "pnpm@10.9.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=10.9.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:playground": "turbo run dev --filter=playground",
    "dev:docs": "turbo run dev --filter=docs",
    "build": "turbo run build",
    "build:components": "turbo run build --filter=components",
    "build:docs": "turbo run build --filter=docs",
    "docs:deploy": "gh-pages -d apps/docs/.vitepress/dist",
    "lint": "turbo run lint",
    "lint:fix": "oxlint ./packages --fix && eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,vue,md}\"",
    "check-types": "turbo run check-types",
    "release": "changeset publish",
    "version": "changeset version",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^20.17.49",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.1",
    "eslint": "^9.23.0",
    "eslint-plugin-oxlint": "^0.16.2",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "oxlint": "^0.16.3",
    "prettier": "^3.2.0",
    "turbo": "^2.4.4",
    "typescript": "^5.3.0",
    "vite": "5.4.19"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  }
}
