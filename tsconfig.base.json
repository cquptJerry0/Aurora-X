{
    "compilerOptions": {
      "target": "ES2020", // 目标版本
      "module": "ESNext", // 模块类型
      "moduleResolution": "bundler", // 模块解析策略
      "strict": true, // 严格模式
      "jsx": "preserve", // JSX 模式
      "sourceMap": true, // 生成源映射
      "resolveJsonModule": true, // 解析 JSON 模块
      "esModuleInterop": true, // 启用 ES 模块互操作
      "skipLibCheck": true // 跳过库检查
    }
  }